@model List<Palindrom.Models.PalindromBaza>

<h1>Kategorija: @Model.First().Kategorija</h1>

<br/>
@if (Model.Count() != 0 && Model.First().ID.ToString() != "0")
{
    foreach (var red in Model)
    {

        <button type="button" class="btn" onclick="location.href='@Url.Action("UcitajTemu", "Home", new { id = red.ID })'">@red.Naslov</button>
        <br />
        <br />

    }
}
else if (Model.Count() != 0 && Model.First().ID.ToString() == "0")
{
    <h1 style="color:red;font-weight:bold" id="nemaRez">Ova kategorija ne sadrži ni jednu temu.</h1>
}

else {
<h1 style="color:red;font-weight:bold" id="nemaRez">Izgleda da nema rezultata koji odgovaraju Vašoj pretrazi.</h1>}